---
import { getLetterEntries } from "@anglish/db";
import LetterPage from "~/components/LetterPage.astro";
import { LETTER_ENTRIES_PER_PAGE } from "~/constants";
import Layout from "~/layouts/Layout.astro";

export function getStaticPaths() {
  return Array.from({ length: 26 }, (_, i) => ({ params: { letter: String.fromCharCode(97 + i) } }));
}

const { letter } = Astro.params;
const entries = await getLetterEntries(letter, 1, LETTER_ENTRIES_PER_PAGE);
---

<Layout>
  <LetterPage letter={letter} page={1} entries={entries} />
</Layout>
